<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ajouter un Employé</title>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Quicksand:wght@400;500&family=Pacifico&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/employe/create.css">
        <link rel="stylesheet" href="/css/partials/navbar.css">
        <link rel="stylesheet" href="/css/partials/footer.css">
        <link rel="icon" href="/media/logoo.png" type="image/x-icon">
    </head>
    <body>

        <%- include("../partials/navbar") %>

        <section class="mt-5 mb-4">
            <div class="container d-flex align-items-center justify-content-center flex-column">
                <div class="form-container">
                    <h2>Ajouter un Employé</h2>
                    <form action="/invitation/add" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom de l'employé</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Numéro de téléphone</label>
                            <input type="tel" class="form-control" id="phone" name="phone">
                        </div>
                        <div class="mb-3">
                            <label for="role" class="form-label">Rôle</label>
                            <input type="text" class="form-control" id="role" name="role" value="employee" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="microCrecheId" class="form-label">Micro-crèche</label>
                            <select class="form-select" id="microCrecheId" name="microCrecheId" required>
                            <% microCreches.forEach(mc => { %>
                                <option value="<%= mc._id %>"><%= mc.name %></option>
                            <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="workHoursPerWeek" class="form-label">Nombre d'heures de travail par semaine</label>
                            <input type="number" class="form-control" id="workHoursPerWeek" name="workHoursPerWeek" min="0" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Ajouter l'employé</button>
                    </form>
                </div>
            </div>
        </section>

        <%- include("../partials/footer") %>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
